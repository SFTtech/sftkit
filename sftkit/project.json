{
  "name": "sftkit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "sftkit/sftkit",
  "projectType": "library",
  "tags": [],
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pdm run -p .. mypy .",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pdm run -p .. ruff check .",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["typecheck"]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pdm run -p .. ruff format .",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pdm run -p .. pytest . --doctest-modules",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["default"],
      "options": {
        "command": "pdm build",
        "cwd": "{projectRoot}"
      }
    }
  }
}
